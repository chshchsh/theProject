<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/CustomAction</item>
    </style>
    <style name="CustomAction" parent="@android:style/Widget.Holo.Light.ActionBar">
    <item name="android:background">@android:color/black</item>
     <item name="android:titleTextStyle">@style/CustomTextColor</item>
    </style>
    <style name="CustomTextColor" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
